#include<bits/stdc++.h> 
using namespace std; 
void Squaring(int arr[], int n) 
{ 
    for (int i = 0 ; i < n ; i++) 
        arr[i] = arr[i] * arr[i]; 
    sort(arr, arr+n); 
} 
 
int main() 
{ 
    int arr[] = { 2 , 0 , -6 , -2 , -9 , 1 }; 
    int n = sizeof(arr)/sizeof(arr[0]); 
  
    cout << "Before sort " << endl; 
    for (int i = 0; i < n; i++) 
        cout << arr[i] << " " ; 
    Squaring(arr, n); 
  
    cout << "\nAfter Sort" << endl; 
    for (int i = 0 ; i < n ; i++) 
        cout << arr[i] << " " ; 
  
    return 0; 
} 
