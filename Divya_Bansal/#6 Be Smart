#include <iostream>
#include <conio.h>
using namespace std;

int main()
{
    int n,temp=0,min=0,count=0;
    cout<<"Enter the number of elements in array: ";
    cin>>n;
    int arr[n];
    cout<<"Enter the elements of array: ";
    for(int i=0;i<n;i++)
    {
       cin>>arr[i]; 
    }
    //Squaring the elements
    for(int i=0;i<n;i++)
    {
       arr[i]=arr[i]*arr[i]; 
    }
    //Sorting the elements in ascending order
    
    for (int i = 0; i < n - 1; i++) 
    {
        min=arr[i];
        for (int j = i + 1; j < n; j++)
        {
            if (arr[j] < min)
            {
                min = arr[j];
                temp = arr[i];
                arr[i] = arr[j];
                arr[j] = temp;
            }
        }
   }
   cout<<"Resulted array is: ";
    for(int i=0;i<n;i++)
    {
       cout<<arr[i]<<" "; 
    }
    return 0;
}
