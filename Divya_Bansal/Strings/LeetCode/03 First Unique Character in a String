class Solution {
public:
    int firstUniqChar(string s) 
    {
       int n=s.length(),j;
        if(n==1)
        {
            return 0;
        }
       for(int i=0;i<n;i++)
       {
           for( j=0;j<n;j++)
           {
               if(i==j)
                   continue;
               if(s.at(i)==s.at(j))
               {
                   break;
               }
           }
           if(j==n)
           {
               return i;
           }
       }
        return -1;
    }
};
