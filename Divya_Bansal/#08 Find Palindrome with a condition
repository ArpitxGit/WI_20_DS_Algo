#include <iostream>
using namespace std;

int main()
{
    int n;
    cout<<"Enter a number: ";
    cin>>n;
    int temp=n,rev=0;
    while(temp>0)
    {
        rev=(rev*10) + (temp%10);
        temp=temp/10;
    }
    if(rev==n)
    cout<<"Number is palidrome";
    else
    cout<<"Number is not a palidrome";
    
    return 0;
}
